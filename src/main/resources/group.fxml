<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ganttchart.controller.GroupController"
            prefHeight="400.0" prefWidth="600.0">

    <left>
        <TreeView fx:id="groupTreeView">
        </TreeView>
    </left>

    <center>
        <GridPane alignment="center" hgap="10" vgap="10" >
            <padding>
                <Insets top="25" right="25" left="25" bottom="25"/>
            </padding>
            <Label fx:id="groupName" text="Create new group" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label fx:id="name" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="create" text="Create" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#createProjectAction"  />
        </GridPane>
    </center>

</BorderPane>
