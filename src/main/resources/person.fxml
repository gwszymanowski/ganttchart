<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ganttchart.controller.PersonController">

    <top>
        <ganttchart.gui.elements.GanttMenu />
    </top>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <TableView fx:id="projectTable">
                <columns>
                    <TableColumn text="Person">
                        <columns>
                            <TableColumn text="Firstname" minWidth="250"/>
                            <TableColumn text="Lastname" minWidth="250" />
                        </columns>
                    </TableColumn>
                    <TableColumn text="Options" minWidth="250"/>
                </columns>
            </TableView>
        </GridPane>
    </center>

</BorderPane>
