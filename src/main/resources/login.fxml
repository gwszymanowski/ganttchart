<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ganttchart.controller.LoginController"
          prefHeight="400.0" prefWidth="600.0"
          alignment="center" hgap="10" vgap="10"  >

    <padding>
            <Insets top="25" right="25" left="25" bottom="25"/>
    </padding>
    <Label fx:id="username" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label fx:id="password" text="Password:"  GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <PasswordField fx:id="passwordField"  GridPane.columnIndex="1" GridPane.rowIndex="2"  />
    <HBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button fx:id="signup" text="Sign up" onAction="#signupView"  />
        <Button fx:id="login" text="Login" onAction="#loginAction"  />
    </HBox>
</GridPane>
